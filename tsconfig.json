{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "ESNext",
      "WebWorker",
      "DOM"
    ],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["./src/typings"],
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "exclude": [
    "**/node_modules/**/*",
    "**/scripts/**/*",
    "src/react-worker/worker/jsdom/**/*",
    "src/react-worker/host/handlers/reconciler.ts",
    "src/react-worker/worker/createElement.ts",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ]
}
